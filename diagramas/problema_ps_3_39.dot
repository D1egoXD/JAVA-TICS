digraph FuncionFactoriales {
    rankdir=TB;
    node [shape=box, style=filled, fontname="Arial", fontsize=10];
    edge [fontname="Arial", fontsize=9];
    
    // Nodos
    inicio [label="INICIO", shape=oval, fillcolor="#90EE90", color=black, fontcolor=black];
    leerK [label="Leer K", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];
    initI [label="I ← 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    decisionI [label="I ≤ K", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];
    leerXYZ [label="Leer X, Y, Z", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];
    
    // Condición 1: X > 0 AND Y > 0 AND Z > 0
    cond1 [label="X > 0 ∧\nY > 0 ∧\nZ > 0", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];
    calcZY [label="F ← Z! / Y!", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    
    // Condición 2: X > 0 (si no cumple condición 1)
    cond2 [label="X > 0", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];
    calcX [label="F ← X!", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    
    // Caso 3: cualquier otro caso
    calcUno [label="F ← 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    
    // Convergencia y continuación
    conector [label="", shape=circle, width=0.3, height=0.3, fillcolor="#ADD8E6", color=black];
    escribir [label="Escribir\nF", shape=egg, fillcolor="#FFFACD", color=black, fontcolor=black];
    incrementar [label="I ← I + 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    fin [label="FIN", shape=oval, fillcolor="#F08080", color=black, fontcolor=black];
    
    // Conexiones
    inicio -> leerK;
    leerK -> initI;
    initI -> decisionI;
    decisionI -> leerXYZ [label="Sí"];
    decisionI -> fin [label="No"];
    
    leerXYZ -> cond1;
    cond1 -> calcZY [label="Sí"];
    cond1 -> cond2 [label="No"];
    
    cond2 -> calcX [label="Sí"];
    cond2 -> calcUno [label="No"];
    
    calcZY -> conector;
    calcX -> conector;
    calcUno -> conector;
    
    conector -> escribir;
    escribir -> incrementar;
    incrementar -> decisionI;
}
