digraph ContadorParesImpares {
    rankdir=TB;
    node [shape=box, style=filled, fontname="Arial", fontsize=10];
    edge [fontname="Arial", fontsize=9];
    
    // Nodos
    inicio [label="INICIO", shape=oval, fillcolor="#90EE90", color=black, fontcolor=black];
    leerN [label="Leer N", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];
    init [label="PARES ← 0\nIMPARES ← 0", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    initI [label="I ← 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    decision1 [label="I ≤ N", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];
    leerNum [label="Leer NUM", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];
    decision2 [label="NUM % 2 = 0", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];
    incrementaPares [label="PARES ← PARES + 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    incrementaImpares [label="IMPARES ← IMPARES + 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    conector [label="", shape=circle, width=0.3, height=0.3, fillcolor="#ADD8E6", color=black];
    incrementaI [label="I ← I + 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    escribir [label="Escribir\nPARES, IMPARES", shape=egg, fillcolor="#FFFACD", color=black, fontcolor=black];
    fin [label="FIN", shape=oval, fillcolor="#F08080", color=black, fontcolor=black];
    
    // Conexiones
    inicio -> leerN;
    leerN -> init;
    init -> initI;
    initI -> decision1;
    decision1 -> leerNum [label="Sí"];
    decision1 -> escribir [label="No"];
    leerNum -> decision2;
    decision2 -> incrementaPares [label="Sí"];
    decision2 -> incrementaImpares [label="No"];
    incrementaPares -> conector;
    incrementaImpares -> conector;
    conector -> incrementaI;
    incrementaI -> decision1;
    escribir -> fin;
}
