digraph SelectorMultiple {
    // Configuración general
    rankdir=TB;
    node [shape=box, style=filled, fontname="Arial", fontsize=11];
    edge [fontname="Arial", fontsize=10, color=black, arrowsize=0.8];

    // Nodo inicial (óvalo verde - Símbolo de Inicio)
    start [label="INICIO", shape=oval, fillcolor="#90EE90", style="filled", width=1.5, height=0.8];

    // Nodo de entrada - Leer valor del selector (paralelogramo amarillo claro)
    input [label="Leer SELECTOR", shape=parallelogram, fillcolor="#FFFACD", style="filled", skew=0.3];

    // Nodo del selector (hexágono amarillo claro)
    selector [label="SELECTOR", shape=hexagon, fillcolor="#FFFACD", style="filled", width=2.0];

    // Acciones según el valor del selector (rectángulo azul claro)
    accion1 [label="ACCION 1", shape=rectangle, fillcolor="#ADD8E6", style="filled"];
    accion2 [label="ACCION 2", shape=rectangle, fillcolor="#ADD8E6", style="filled"];
    accion3 [label="ACCION 3", shape=rectangle, fillcolor="#ADD8E6", style="filled"];
    accionX [label="ACCION X", shape=rectangle, fillcolor="#ADD8E6", style="filled"];

    // Punto de convergencia
    convergencia [label="", shape=circle, fillcolor=black, width=0.2, height=0.2];

    // Acción final Y (rectángulo azul claro)
    accionY [label="ACCION Y", shape=rectangle, fillcolor="#ADD8E6", style="filled"];

    // Nodo de salida (egg - Símbolo de Documento Impreso)
    output [label="Escribir resultado", shape=egg, fillcolor="#FFFACD", style="filled"];

    // Nodo final (óvalo rojo/coral - Símbolo de Fin)
    end [label="FIN", shape=oval, fillcolor="#F08080", style="filled", width=1.5, height=0.8];

    // Conexiones
    start -> input;
    input -> selector;

    // Desde el selector a cada acción
    selector -> accion1 [label="Valor 1"];
    selector -> accion2 [label="Valor 2"];
    selector -> accion3 [label="Valor 3"];
    selector -> accionX [label="De otra forma"];

    // Convergencia hacia ACCION Y
    accion1 -> convergencia;
    accion2 -> convergencia;
    accion3 -> convergencia;
    accionX -> convergencia;

    // De convergencia a ACCION Y
    convergencia -> accionY;

    // De ACCION Y a salida
    accionY -> output;

    // Final del flujo
    output -> end;
}
