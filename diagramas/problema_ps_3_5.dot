digraph SerieArmonica {
    rankdir=TB;
    node [shape=box, style=filled, fontname="Arial", fontsize=10];
    edge [fontname="Arial", fontsize=9];
    
    // Nodos
    inicio [label="INICIO", shape=oval, fillcolor="#90EE90", color=black, fontcolor=black];
    leerN [label="Leer N", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];
    initSuma [label="SUMA ← 0.0", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    initI [label="I ← 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    decision [label="I ≤ N", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];
    calcular [label="SUMA ← SUMA + 1.0/I", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    incrementar [label="I ← I + 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    escribir [label="Escribir\nSUMA", shape=egg, fillcolor="#FFFACD", color=black, fontcolor=black];
    fin [label="FIN", shape=oval, fillcolor="#F08080", color=black, fontcolor=black];
    
    // Conexiones
    inicio -> leerN;
    leerN -> initSuma;
    initSuma -> initI;
    initI -> decision;
    decision -> calcular [label="Sí"];
    decision -> escribir [label="No"];
    calcular -> incrementar;
    incrementar -> decision;
    escribir -> fin;
}
