    no_encontrado [label="\"El elemento NO\nestá en el arreglo\"", shape=box, fillcolor=lightyellow];

    // Nodos de proceso (rectángulos con color azul claro)
    init_vars [label="IZQ ← 1\nDER ← N\nBAN ← 1", shape=box, fillcolor=lightblue];
    calc_cen [label="CEN ← (IZQ + DER) DIV 2", shape=box, fillcolor=lightblue];
    set_ban [label="BAN ← 0", shape=box, fillcolor=lightblue];
    set_izq [label="IZQ ← CEN + 1", shape=box, fillcolor=lightblue];
