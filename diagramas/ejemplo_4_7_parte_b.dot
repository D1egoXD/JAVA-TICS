digraph BusquedaBinaria_Parte_B {
    // Configuración general
    rankdir=TB;
    node [shape=box, style=filled, fontname="Arial", fontsize=10];
    edge [fontname="Arial", fontsize=9];

    // Conector de entrada
    conectorA [label="A", shape=pentagon, fillcolor="#ADD8E6", color=black, fontcolor=black];

    // Entrada/Salida
    msgX [label="Escribir\n\"Ingrese el dato\na buscar\"", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];
    leerX [label="Leer X", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];

    // Proceso
    initVars [label="IZQ ← 1\nDER ← N\nBAN ← 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    calcCen [label="CEN ← (IZQ + DER)\nDIV 2", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    setBan [label="BAN ← 0", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    setIzq [label="IZQ ← CEN + 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    setDer [label="DER ← CEN - 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];

    // Decisiones
    checkLoop [label="IZQ ≤ DER y\nBAN = 1\n?", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];
    checkIgual [label="X = VECTOR[CEN]\n?", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];
    checkMayor [label="X > VECTOR[CEN]\n?", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];

    // Convergencia
    converge1 [label="", shape=circle, width=0.2, height=0.2, fillcolor=black, color=black];

    // Conector de salida
    conectorC [label="C", shape=pentagon, fillcolor="#ADD8E6", color=black, fontcolor=black];

    // Conexiones
    conectorA -> msgX;
    msgX -> leerX;
    leerX -> initVars;
    initVars -> converge1;
    converge1 -> checkLoop;
    
    checkLoop -> calcCen [label="Si"];
    checkLoop -> conectorC [label="No"];
    
    calcCen -> checkIgual;
    
    checkIgual -> setBan [label="Si"];
    checkIgual -> checkMayor [label="No"];
    
    checkMayor -> setIzq [label="Si"];
    checkMayor -> setDer [label="No"];
    
    setBan -> converge1;
    setIzq -> converge1;
    setDer -> converge1;
}
