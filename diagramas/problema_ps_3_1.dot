digraph SumaNNumeros {
    rankdir=TB;
    node [shape=box, style=filled, fontname="Arial", fontsize=10];
    edge [fontname="Arial", fontsize=9];

    // Nodos
    inicio [label="INICIO", shape=oval, fillcolor="#90EE90", color=black, fontcolor=black];
    leerN [label="Leer N", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];
    initSuma [label="SUMA ← 0", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    initI [label="I ← 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    ciclo [label="I ≤ N", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];
    acumular [label="SUMA ← SUMA + I", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    incremento [label="I ← I + 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    escribir [label="Escribir\nSUMA", shape=egg, fillcolor="#FFFACD", color=black, fontcolor=black];
    fin [label="FIN", shape=oval, fillcolor="#F08080", color=black, fontcolor=black];

    // Conexiones
    inicio -> leerN;
    leerN -> initSuma;
    initSuma -> initI;
    initI -> ciclo;
    ciclo -> acumular [label="Sí"];
    ciclo -> escribir [label="No"];
    acumular -> incremento;
    incremento -> ciclo;
    escribir -> fin;
}
