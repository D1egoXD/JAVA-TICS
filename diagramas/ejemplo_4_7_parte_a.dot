digraph BusquedaBinaria_Parte_A {
    // Configuración General
    rankdir=TB;
    node [shape=box, style=filled, fontname="Arial", fontsize=10];
    edge [fontname="Arial", fontsize=9];

    // Nodo inicial
    inicio [label="INICIO", shape=oval, fillcolor="#90EE90", color=black, fontcolor=black];
    
    // Entrada/Salida
    msgN [label="Escribir\n\"Ingrese número\nde elementos\"", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];
    leerN [label="Leer N", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];
    msgError [label="Escribir\n\"Error en los datos\"", shape=egg, fillcolor="#FFFACD", color=black, fontcolor=black];
    msgDato [label="Escribir\n\"Ingrese el dato\"", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];
    leerVector [label="Leer VECTOR[I]", shape=parallelogram, fillcolor="#FFFACD", color=black, fontcolor=black];
    
    // Decisión
    validarN [label="N ≥ 1 y\nN ≤ 50\n?", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];
    loopCheck [label="I ≤ N\n?", shape=diamond, fillcolor="#ADD8E6", color=black, fontcolor=black];
    
    // Proceso
    initI [label="I ← 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    incrementI [label="I ← I + 1", shape=box, fillcolor="#ADD8E6", color=black, fontcolor=black];
    
    // Conectores
    conectorA [label="A", shape=pentagon, fillcolor="#ADD8E6", color=black, fontcolor=black];
    conectorB [label="B", shape=pentagon, fillcolor="#ADD8E6", color=black, fontcolor=black];

    // Convergencia
    converge1 [label="", shape=circle, width=0.2, height=0.2, fillcolor=black, color=black];

    // Conexiones
    inicio -> msgN;
    msgN -> leerN;
    leerN -> validarN;

    validarN -> initI [label="Si"];
    validarN -> msgError [label="No"];

    initI -> converge1;
    converge1 -> loopCheck;
    loopCheck -> msgDato [label="Si"];
    loopCheck -> conectorA [label="No"];

    msgDato -> leerVector;
    leerVector -> incrementI;
    incrementI -> converge1;

    msgError -> conectorB;
}